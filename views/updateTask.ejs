!-- views/updateTask.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager - Register</title>
    <link rel="stylesheet" href="/styles/main.css">
  </head>

<body>
  <h1>Update Task</h1>
  <form action="/updateTask/<%= task._id %>" method="POST">
    <label for="name">Task Name:</label>
    <input type="text" id="name" name="name" value="<%= task.name %>" required>
    <br>
    <label for="description">Task Description:</label>
    <textarea id="description" name="description" required><%= task.description %></textarea>
    <br>
    <label for="dueDate">Due Date:</label>
    <input type="date" id="dueDate" name="dueDate" value="<%= task.dueDate.toISOString().split('T')[0] %>"
        required>
    <br>
    <button type="submit">Update Task</button>
</form>
  <p><a href="/tasks">Back to Tasks</a></p>
  <p><a href="/dash">Back to Dashboard</a></p>
</body>

</html>
